<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Document</title>
  <script src="/js/vue.js"></script>
</head>
<body>
  <div id = "app">

      <input type="text" @click:prevent="clickText">
      <p> hello yoo~~{{name}}</p>
      <a :href="url">百度</a>
      <a v-bind:href="url">百度</a>

      <input type="button" value="change URL" @click="changeURL">
      <input type="button" value="change URL" v-on:click="changeURL">
  </div>



  <script>
    let defualtData = {
      name: "",
      url: "http://www.baidu.com"
    };

    let appMethods = {
      clickText: function(){
        this.name = "Jesse";
      },
      changeURL: function(){
        this.url = "http://www.google.com";
      }
    };


    let app = new Vue({
      el:"#app",
      data: defualtData,
      methods: appMethods
    })
  </script>
</body>
</html>